---
// src/pages/dashboard/ayuda.astro
import DashboardLayout from '@/layouts/DashboardLayout.astro';

const robots = ["noindex", "nofollow"];
const title = "Ayuda - Incadev";
const description = "Centro de ayuda y documentación del sistema académico";
const keywords = ["ayuda", "soporte", "documentación", "FAQ"];
const url = "https://instituto.cetivirgendelapuerta.com/academico/dashboard/ayuda";
const imageOG = "/academico/incadev_isologotipo.webp";
const imagetwt = "/academico/incadev_isologotipo.webp";
---
<DashboardLayout {robots} {title} {description} {keywords} {url} {imageOG} {imagetwt}>
  <div class="container mx-auto p-6">
    <div class="mb-8">
      <h1 class="text-3xl font-bold">Centro de Ayuda</h1>
      <p class="text-muted-foreground mt-2">Encuentra respuestas a tus preguntas y documentación del sistema</p>
    </div>

    <div class="grid gap-8 lg:grid-cols-3">
      <div class="lg:col-span-2 space-y-8">
        <section class="bg-card rounded-lg border p-6">
          <h2 class="text-2xl font-semibold mb-4">Guías Rápidas</h2>
          <div class="space-y-4">
            <div class="border-l-4 border-primary pl-4 py-2">
              <h3 class="font-semibold text-lg">Gestión de Cursos</h3>
              <p class="text-muted-foreground mt-1">Aprende a crear, editar y gestionar cursos en la plataforma.</p>
            </div>
            <div class="border-l-4 border-green-500 pl-4 py-2">
              <h3 class="font-semibold text-lg">Administración de Estudiantes</h3>
              <p class="text-muted-foreground mt-1">Guía completa para gestionar estudiantes y sus progresos.</p>
            </div>
            <div class="border-l-4 border-purple-500 pl-4 py-2">
              <h3 class="font-semibold text-lg">Sistema de Evaluaciones</h3>
              <p class="text-muted-foreground mt-1">Cómo crear evaluaciones y gestionar calificaciones.</p>
            </div>
          </div>
        </section>

        <section class="bg-card rounded-lg border p-6">
          <h2 class="text-2xl font-semibold mb-4">Preguntas Frecuentes</h2>
          <div class="space-y-4">
            <div class="border rounded-lg p-4">
              <h3 class="font-semibold text-lg mb-2">¿Cómo restablecer mi contraseña?</h3>
              <p class="text-muted-foreground">Ve a Configuración → Seguridad → Cambiar contraseña.</p>
            </div>
            <div class="border rounded-lg p-4">
              <h3 class="font-semibold text-lg mb-2">¿Dónde encuentro el historial de cursos?</h3>
              <p class="text-muted-foreground">En el menú principal, ve a Cursos → Historial de Cursos.</p>
            </div>
            <div class="border rounded-lg p-4">
              <h3 class="font-semibold text-lg mb-2">¿Cómo generar reportes académicos?</h3>
              <p class="text-muted-foreground">Accede a Reportes en el menú lateral.</p>
            </div>
          </div>
        </section>
      </div>

      <div class="space-y-6">
        <div class="bg-primary/10 rounded-lg p-6 border border-primary/20">
          <h3 class="font-semibold text-lg mb-3 text-primary">Soporte Técnico</h3>
          <div class="space-y-3 text-sm text-primary">
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <span>soporte@incadev.com</span>
            </div>
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <span>+51 999999123</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>